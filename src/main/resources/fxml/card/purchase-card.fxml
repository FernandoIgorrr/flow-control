<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="br.com.midnightsyslabs.flow_control.ui.controller.card.PurchaseCardController"
  maxWidth="Infinity"
  prefHeight="150"
  styleClass="client-card">
  <!-- CONTENT -->
  <VBox>
    <padding>
      <Insets top="0" right="22" bottom="12" left="22" />
    </padding>
    <!-- HEADER -->
    <!-- HEADER COM BOTÕES À DIREITA -->
    <HBox >
      <!-- ICON CONTAINER -->
      <VBox spacing="6">
        <HBox spacing="6" alignment="CENTER_LEFT">

          <padding>
            <Insets top="12" right="0" bottom="0" left="0" />
          </padding>
          <StackPane fx:id="iconContainer"
            prefWidth="22"
            prefHeight="22"
            styleClass="icon-container-on-card">
            <ImageView fx:id="imgType"
              fitHeight="22"
              fitWidth="22"
              preserveRatio="true" />
          </StackPane>
          <Label fx:id="lblRawMaterialName" styleClass="client-name" />
         
          <TextField fx:id="lblPurchaseId" styleClass="purchase-info-id, text-field-copy" />
        </HBox>
        <HBox>
          <VBox
            prefWidth="200">
            <Label text="Fornecedor" styleClass="purchase-info-title" />
            <Label fx:id="lblSupplierName" styleClass="purchase-info" />
          </VBox>
          <VBox prefWidth="200">
            <Label fx:id="lblQuantityTitle" styleClass="purchase-info-title" />
            <Label fx:id="lblQuantity" styleClass="purchase-info" />
          </VBox>
          <VBox prefWidth="200">
            <Label fx:id="lblPricePerUnitTitle" styleClass="purchase-info-title" />
            <Label fx:id="lblUnitPrice" styleClass="purchase-info-price" />
          </VBox>
          <VBox prefWidth="200">
            <Label text="Data da compra" styleClass="purchase-info-title" />
            <Label fx:id="lblDate" styleClass="purchase-info" />
          </VBox>
        </HBox>

        <VBox>
          <Label text="Observação" styleClass="purchase-info-title" />
          <Label fx:id="lblNote" styleClass="purchase-info" />
        </VBox>
      </VBox>
      <!-- SPACER -->
      <Region HBox.hgrow="ALWAYS" />
      <VBox alignment="TOP_RIGHT">
        <padding>
          <Insets top="12" right="0" bottom="0" left="0" />
        </padding>
        <Label text="Valor Total" />
        <Label fx:id="lblTotalPrice" styleClass="total-price-info-blue" />
      </VBox>
        <VBox fx:id="buttons">
         <padding>
          <Insets top="22" right="0" bottom="0" left="0" />
        </padding>
      <Button fx:id="btnClose" onAction="#onClose" styleClass="btn-action-close">
        <graphic>
          <StackPane prefWidth="28" prefHeight="28">
            <ImageView  fitHeight="28" fitWidth="28"
              styleClass="icon-close" preserveRatio="true"
            >
              <image>
                <Image url="@/images/line-md--confirm-circle.png" />
              </image>
            </ImageView>
          </StackPane>
        </graphic>
      </Button>

       <Button fx:id="btnDelete" onAction="#onDelete" styleClass="btn-action-delete">
        <graphic>
          <StackPane prefWidth="28" prefHeight="28">
            <ImageView fitHeight="28" fitWidth="28"
              styleClass="icon-delete" preserveRatio="true"
            >
              <image>
                <Image url="@/images/delete.png" />
              </image>
            </ImageView>
          </StackPane>
        </graphic>
      </Button>

      </VBox>
    </HBox>
  </VBox>
</StackPane>