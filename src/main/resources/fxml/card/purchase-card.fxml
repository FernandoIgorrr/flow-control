<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.com.midnightsyslabs.flow_control.ui.controller.card.PurchaseCardController"
    maxWidth="Infinity"
    prefHeight="180"
    styleClass="client-card">


    <!-- CONTENT -->
    <VBox >

           <padding>
                    <Insets top="0" right="16" bottom="0" left="16" />
                </padding>
        <!-- HEADER -->
        <!-- HEADER COM BOTÕES À DIREITA -->
        <HBox alignment="CENTER_LEFT">
            <!-- ICON CONTAINER -->
            <StackPane fx:id="iconContainer"
                prefWidth="22"
                prefHeight="22"
                styleClass="icon-container-on-card">
                <ImageView fx:id="imgType"
                    fitHeight="22"
                    fitWidth="22"
                    preserveRatio="true" />
            </StackPane>
        
            <Label fx:id="lblRawMaterialName" styleClass="client-name" />
               
            <VBox >

             

                <Region HBox.hgrow="ALWAYS" />
                <Label text="Valor Total: " />
                <Label fx:id="lblTotalPrice" styleClass="total-price-info" />
            </VBox>
        </HBox>
    </VBox>
</StackPane>