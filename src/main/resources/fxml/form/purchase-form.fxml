<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.com.midnightsyslabs.flow_control.ui.controller.form.PurchaseFormController"
    stylesheets="@../../css/form.css"
    styleClass="form-root">

    <!-- HEADER -->
    <top>
        <HBox spacing="10"
            alignment="CENTER_LEFT"
            styleClass="form-header">

            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <VBox spacing="4">
                <Label
                    text="Nova Compra"
                    styleClass="form-title" />
            </VBox>
        </HBox>
    </top>

    <!-- FORM -->
    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>

                <children>


                    <VBox spacing="4"
                        GridPane.rowIndex="0"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2">
                        <Label text="Fornecedor *" />
                        <ComboBox fx:id="supplierComboBox" maxWidth="Infinity" />
                    </VBox>

                    <VBox spacing="4"
                        GridPane.rowIndex="1"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2">
                        <Label text="Matéria-Prima *" />
                        <ComboBox
                            fx:id="rawMaterialComboBox"
                            maxWidth="Infinity"
                        />
                    </VBox>

                    <VBox spacing="4"
                        GridPane.rowIndex="2"
                        GridPane.columnIndex="0">
                        <Label fx:id="lblQuantity" />
                        <TextField
                            fx:id="quantityField"
                            promptText="0,0" />
                    </VBox>

                    <VBox spacing="4"
                        GridPane.rowIndex="2"
                        GridPane.columnIndex="1">
                        <Label text="Unidade *" />
                        <ComboBox
                            fx:id="measurementUnitComboBox"
                            maxWidth="Infinity" />
                    </VBox>
                    <VBox spacing="4"
                        GridPane.rowIndex="3"
                        GridPane.columnIndex="0">
                        <TextFlow>
                            <Text text="Preço " styleClass="label" />
                            <Text text="TOTAL" style="-fx-font-size: 15px;-fx-font-weight: bold;" />
                            <Text text=" da Compra (R$) *" styleClass="label" />
                        </TextFlow>
                        <TextField
                            fx:id="priceField"
                            promptText="0,0" />
                    </VBox>

                    <VBox spacing="4"
                        GridPane.rowIndex="3"
                        GridPane.columnIndex="1">
                        <Label text="Data da compra *" />
                        <DatePicker fx:id="datePicker" />
                    </VBox>

                    <VBox spacing="4"
                        GridPane.rowIndex="4"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2">
                        <Label text="Observação" />
                        <TextField fx:id="noteField" promptText="Observação" />
                    </VBox>


                </children>
            </GridPane>
        </VBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="10"
            alignment="CENTER"
            styleClass="form-footer">

            <padding>
                <Insets top="16" right="20" bottom="16" left="20" />
            </padding>

            <Button text="Cancelar"
                onAction="#onCancel"
                styleClass="btn-secondary" />

            <Button text="Salvar"
                onAction="#onSave"
                styleClass="btn-primary" />
        </HBox>
    </bottom>

</BorderPane>