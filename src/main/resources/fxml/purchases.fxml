<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.com.midnightsyslabs.flow_control.ui.controller.PurchasesController"
    stylesheets="@../css/card.css"
    styleClass="content-root">

    <!-- HEADER -->
   <top>
    <VBox>

        <!-- HEADER -->
        <HBox 
              alignment="CENTER_LEFT"
              styleClass="page-header">


            <!-- LEFT -->
            <VBox spacing="4">
                <Label text="Compras de Matérias-Primas" styleClass="page-title"/>
                <Label text="Gerencie suas Compras" styleClass="page-subtitle"/>
            </VBox>

            <!-- SPACER -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- RIGHT -->
            <Button
                fx:id="btnAddPurchase"
                text="Nova compra"
                onAction="#onAddPurchase"
                styleClass="btn-primary">
                <graphic>
                    <StackPane prefWidth="22" prefHeight="22">
                        <ImageView fitHeight="22" fitWidth="22"
                                   preserveRatio="true"
                                   styleClass="btn-primary-icon">
                            <image>
                                <Image url="@/images/ic--baseline-plus.png"/>
                            </image>
                        </ImageView>
                    </StackPane>
                </graphic>
            </Button>
        </HBox>

        <!-- PRICE CARDS -->
        <HBox>
            <VBox
                fx:id="recentPurchasesPricecardPane"
                spacing="20"
                maxWidth="Infinity"/>
        </HBox>

         <HBox>
            <VBox
                fx:id="recentPurchasesPricecardPane"
                spacing="20"
                maxWidth="Infinity"/>
        </HBox>

         <HBox>
            <VBox
                fx:id="recentPurchasesPricecardPane"
                spacing="20"
                maxWidth="Infinity"/>
        </HBox>

    </VBox>
</top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="0" bottom="0" left="0" />
            </padding>

            <!-- SEARCH BAR -->
           <!-- <TextField
                fx:id="txtSearch"
                promptText="Buscar por data, tipo, peso/volume ou preço..."
                styleClass="search-field" />-->

            <!-- CARDS -->
            <ScrollPane
                fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                style="-fx-background-color: transparent;">

                <content>
                    <VBox
                        fx:id="cardsPane"
                        spacing="20"
                        fillWidth="true"
                        maxWidth="Infinity">

                        <padding>
                            <Insets top="0" right="0" bottom="30" left="0" />
                        </padding>

                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>