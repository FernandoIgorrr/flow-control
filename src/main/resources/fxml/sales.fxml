<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.com.midnightsyslabs.flow_control.ui.controller.SalesController"
    stylesheets="@../css/card.css"
    styleClass="content-root">

    <!-- HEADER -->
    <top>
        <HBox spacing="20"
            alignment="CENTER_LEFT"
            styleClass="page-header"
            BorderPane.alignment="CENTER">

            <padding>
                <Insets top="0" right="10" bottom="0" left="10" />
            </padding>

            <!-- LEFT: TITLE + SUBTITLE -->
            <VBox spacing="4">
                <Label text="Vendas"
                    styleClass="page-title" />

                <Label text="Gerencie suas vendas"
                    styleClass="page-subtitle" />
            </VBox>

            <!-- SPACER -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- RIGHT: BUTTON -->
            <Button
                fx:id="btnAddSale"
                text="Nova venda"
                onAction="#onAddSale"
                styleClass="btn-primary">
                <graphic>
                    <StackPane prefWidth="22" prefHeight="22" maxWidth="22" maxHeight="22">
                        <children>
                            <ImageView fitHeight="22.0" fitWidth="22.0" preserveRatio="true"
                                styleClass="btn-primary-icon">
                                <image>
                                    <Image url="@/images/ic--baseline-plus.png" />
                                </image>
                            </ImageView>
                        </children>
                    </StackPane>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="0" bottom="0" left="0" />
            </padding>

            <!-- SEARCH BAR -->
            <!-- <TextField
                fx:id="txtSearch"
                promptText="Buscar por data, tipo, peso/volume ou preÃ§o..."
                styleClass="search-field" />-->

            <!-- CARDS -->
            <ScrollPane
                fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                style="-fx-background-color: transparent;">

                <content>
                    <VBox
                        fx:id="cardsPane"
                        spacing="20"
                        fillWidth="true"
                        maxWidth="Infinity">

                        <padding>
                            <Insets top="0" right="0" bottom="30" left="0" />
                        </padding>

                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>